<%= form_with(model: section) do |form| %>
  <% if section.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>
      <ul>
        <% section.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-3">
    <%= form.text_field :student_name, class:"form-control", placeholder:"Student Name" %>
  </div>

  <div class="mt-3">
    <%= form.text_field :student_no, class:"form-control", placeholder:"Student No" %>
  </div>

  <div class="mt-3">
    <%= form.number_field :number, class:"form-control", placeholder:"Roll Number" %>
  </div>

  <div class="mt-3">
    <%= form.text_field :email, class:"form-control", placeholder:"Student Email" %>
  </div>

  <div class="mt-3">
    <%= form.text_field :address, class:"form-control", placeholder:"Student Address" %>
  </div>

  <div class="mt-3">
    <%= form.file_field :student_photo, class:"form-control", placeholder:"Add Student Photo" %>
  </div>

  <div class="mt-3">
    <%= form.file_field :student_subjects, multiple: true, class:"form-control", placeholder:"Add Student Subjects" %>
  </div>
  
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>
